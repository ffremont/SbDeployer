<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
            </goals>
            <properties>
                <run.jvmArguments>-Dspring.profiles.active=dev</run.jvmArguments>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>spring-boot:run</goal>
            </goals>
            <properties>                
                <run.jvmArguments>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dspring.profiles.active=dev</run.jvmArguments>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dspring.profiles.active=dev -Dspring.config.location=file:src/main/resources/ -classpath %classpath fr.ffremont.microservices.sbmanager.SbManagerWorldApp</exec.args>
                <exec.executable>java</exec.executable>
                <exec.workingdir>/home/florent/NetBeansProjects/springBoot/sbManager</exec.workingdir>
            </properties>
        </action>
    </actions>
